<%- include('header', {pageTitle: profile.username + ' profile'}) %>

<div class="d-flex flex-column align-items-center text-center">
  <img src="/images/avatar_example.png" alt="Profile Image" class="rounded-circle" width="250">
  <div class="mt-3">
    <h4><%=profile.first_name%></h4>
    <p class="text-secondary mb-1">@<%=profile.username%></p>
  </div>
</div>

<div class="text-center justify-content-center">
  <div class="row">
    <div class="col-4">
      <div class="pt-3">
        <a href="/user/<%=profile.user_id%>/posts">
          <h5 class="text-black my-1"><%=profile.posts_count%></h5>
          <p class="text-muted">Posts</p>
        </a>
      </div>
    </div>
    
    <div class="col-4">
      <div class="pt-3">
        <% if(profile.country) {%>
          <h5 class="text-black my-1"><%= profile.country %></h5>
          <p class="text-muted">From</p>
        <% } %>
      </div>
    </div>

    <div class="col-4">
      <div class="pt-3">
        <h5 class="text-black my-1"><%=profile.rating%></h5>
        <p class="text-muted">Rating</p>
      </div>
    </div>
  </div>
  
  <nav class="row mt-4 text-center justify-content-center">
    <a class="btn btn-outline-secondary col-2 mr-4" href="/user/settings">Setting</a>
    <a class="btn btn-outline-danger col-2" href="/user/log_out">Log Out</a>
  </nav>
</div>

<%- include('footer') %>