<%- include('header', {pageTitle: profile.username + ' profile'}) %>

<div class="d-flex flex-column align-items-center text-center">
  <img src="<%=profile.avatar%>" alt="Profile Image" class="rounded-circle" width="250">
  <div class="mt-3">
    <h4><%=profile.first_name%></h4>
    <p class="text-secondary mb-1">@<%=profile.username%></p>
  </div>
</div>

<div class="text-center">
  <div class="d-flex justify-content-around">
    <div class="pt-3">
      <a href="/u/<%=profile.user_id%>/posts">
        <h5 class="text-black my-1"><%=profile.posts_count%></h5>
        <p class="text-muted">Posts</p>
      </a>
    </div>
    
    <div class="pt-3">
      <% if(profile.country) {%>
      <h5 class="text-black my-1"><%= profile.country %></h5>
      <p class="text-muted">From</p>
      <% } %>
    </div>

    <div class="pt-3">
      <h5 class="text-black my-1"><%=profile.rating%></h5>
      <p class="text-muted">Rating</p>
    </div>
    
  </div>
  
  <% if (user) { %>
    <% if (user.username === profile.username) { %>
    <nav class="row mt-4 text-center justify-content-center">
      <a class="btn btn-outline-secondary col-2 mr-4" href="/settings">Setting</a>
      <a class="btn btn-outline-danger col-2" href="/log_out">Log Out</a>
    </nav>
    <% } else { %>
      <nav class="row mt-4 text-center justify-content-center">
        <a class="btn btn-outline-secondary col-2 mr-4" href="/messages?new_user=<%= encodeURIComponent(profile.username) %>&avatar=<%= profile.avatar %>">Send message</a>
      </nav>
    <% } %>
  <% } %>
</div>

<%- include('footer') %>