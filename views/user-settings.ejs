<%- include('header', {pageTitle: 'Settings'}) %>

<div class="d-flex justify-content-center">
  <div class="w-100">
    <h2 class="my-4 text-center">User Settings</h2>
    
    <% x = {'Username':'example','Email address':'example@examplbbbbbbbbbbbe.com','First Name':'Name', 'Country':'Uganda'} %>
    <% for (const [key, value] of Object.entries(x)) { %>
      <div class="d-flex justify-content-between mt-3 border-bottom border-gray">
        <div class="text-muted mx-2">
          <p class="font-weight-bold mb-0">
            <%= key %>
          </p>
          <p class="mb-2">
            <%= value %>
          </p>
        </div>
        <button type="button" class="btn btn-secondary mx-2 text-nowrap my-auto px-4">Change</button>
      </div>
    <% } %>

    <div class="d-flex justify-content-between mt-3 border-bottom border-gray">
      <div class="text-muted mx-2">
        <p class="font-weight-bold mb-0">
          Delete Your Account
        </p>
        <p class="mb-2">
          Username
        </p>
      </div>
      <button type="button" class="btn btn-danger mx-2 text-nowrap my-auto px-4">Delete</button>
    </div>
    
  </div>
</div>

<%- include('footer') %>